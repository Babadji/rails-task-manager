<div class="container">
  <div class="row">
    <div class="col">
      <br>
      <h1>All your tasks</h1>
      <ul>
        <% @tasks.each do |task| %>
          <li><%= link_to task.title, task_path(task.id) %></li>
        <% end %>
        <hr>
        <%= link_to "Create a task", tasks_new_path %>
      </ul>
    </div>
  </div>
</div>



